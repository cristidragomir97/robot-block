[{
    "name": "project_humpback", 
    "desc": "kitchen sink included",
    "components":{

        "interface": [],
        "actuators": [
            {   
                "name": "Camera Servo", 
                "type": "servo",
                "role": "service",
                "topic": "/camera_servo",
                "library": "PIPWM",
                "args":{}
            }, 
            {   
                "name": "Motor Driver", 
                "type": "driver",
                "role": "subscriber",
                "topic": "/cmd_vel",
                "library": "SCMD",
                "address": "0x5d", 
                "args":{
                    "radius": 0.0325,
                    "flip": "true"
                }
            }
        ],

        "sensors": [
            {
                "name": "Center ToF",
                "type": "ranging",
                "library": "VL53L1",
                "role": "publisher",
                "topic": "/range/center",      
                "args":{
                    "address": "0x29"
                }
            }, 
            {
                "name": "Left ToF",
                "type": "ranging",
                "library": "VL53L1",
                "role": "publisher",
                "topic": "/range/left",
                "args":{
                    "address": "0x31"
                }
                
            }, 
            {   
                "name": "Right ToF",
                "type": "ranging",
                "library": "VL53L1",
                "role": "publisher",
                "topic": "/range/right", 
                "args":{
                    "address": "0x32"
                }
            },
            {
                "name": "Motion Sensor",
                "type": "motion",
                "topic": "/imu/raw",
                "role": "publisher",
                "library":"LSM9DS1",
                "args":{
                    "address": ["0x1e", "0x6b"]
                }
            }
        ],

        "scripts":[
            {
                "name":"imu filter",
                "command": "rosrun imu_complementary_filter complementary_filter_node",
                "args": {
                    "fixed_frame": "camera_link",
                    "use_mag": "false",
                    "do_bias_estimation": "true", 
                    "do_adaptive_gain": "false", 
                    "publish_tf": "true"
                }
            }, 
            {   
                "name": "rplidar",
                "command": "roslaunch rplidar_ros rpildar.launch", 
                "args":{
                }
            },
            {   
                "name": "rosboard",
                "command": "rosrun rosboard rosboard_node", 
                "args":{
                }
            },
            {   
                "name": "PiGPIO Daemon",
                "command": "pigpiod", 
                "args":{
                }
            }
        ],

        "containers":[
            {
                "name": "realsense_camera",
                "image": "cristidragomir97/realsense-ros",
                "command": "roslaunch ...",
                "args": {
                    "ROS_IP":"",
                    "ROS_HOSTNAME":"",
                    "ROS_MASTER_URI":"",
                    "color_width": "640",
                    "color_height": "480",
                    "color_fps": "15",
                    "depth_width": "640",
                    "depth_height": "480",
                    "depth_fps": "15"
                }
            }
        ]



    }
}]
